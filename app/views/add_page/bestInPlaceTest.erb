<search>
  <div class="iframe">
	<h3>
		You added  
		<i> <%= @title %> </i> by
		<b> <%= @artist %> </b>
		to database, total 
		<b> <%= @songs_list.count %> </b>
		songs
	</h3>
	<h3>Please make sure all fields are correct !</h3>

		<table class="table table-striped table-border table-hover" id="myTable">
			<thead>
	  			<tr>
		  			<th><strong>Number</strong></th>
		  			<th><strong>Title</strong></th>
		  			<th><strong>Artist</strong></th>
		  			<th><strong>Album</strong></th>
		  			<th><strong>Duration</strong></th>
		  			<th><strong>Quality</strong></th>
		  			<th><strong>fccFlag</strong></th>
		  			<th><strong>is_qDrive</strong></th>
		  			<th><strong>Location</strong></th>
		  			<th><strong>Format</strong></th>
		  			<th><strong>Review</strong></th>
		  		</tr>
		  	</thead>
			<tbody>
				<% $count = 0 %>
				<% @new_songs_array.each do |song| %>
					<tr>
				  		<td> 
						  <%= $count+1 %>
						</td>
				  		<td> 
			    			<%= best_in_place song, :title, :type => :input %>
						</td> 
						<td> 
							<%= best_in_place song, :artist, :type => :input %>
						</td> 
						<td> 
							<%= best_in_place song, :album, :type => :input %>
							
						</td> 
						<td> 
							<%= best_in_place song, :duration, :type => :input %>
							
						</td> 
						<td> 
							<%= best_in_place song, :quality, :type => :input %>
							
						</td> 
						<td> 
							<%= best_in_place song, :fccFlag, :type => :checkbox %>
							
						</td> 
						<td> 
							<%= best_in_place song, :is_qDrive, :type => :checkbox %>
							
						</td> 
						<td> 
							<%= best_in_place song, :location, :type => :input %>
						</td> 
						<td> 
							<%= best_in_place song, :format, :type => :input %>
						</td> 
						<td> 
							<%= best_in_place song, :review, :type => :textarea %>
						</td>

					</tr>
			    	<% $count += 1 %>
				<% end %>
			</tbody>
			
		</table>
    </div>
</search>



<script type="text/javascript">
$(document).ready(function() {
  /* Activating Best In Place */
  $(".best_in_place").best_in_place();
});
</script>