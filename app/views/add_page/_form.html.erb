  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :value => @song[:title]%>
  </div>
  <div class="field">
    <%= f.label :artist %><br>
    <%= f.text_field :artist, :value => @song[:artist]%>
  </div>
  <div class="field">
    <%= f.label :album %><br>
    <%= f.text_field :album, :value => @song[:album]%>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field  :duration, :value => @song[:duration]%>
  </div>
  <div class="field">
    <%= f.label :quality %><br>
    <%= f.number_field :quality, :value => 0 %>
  </div>
 
  <div class="field">
    <%= f.label :fccFlag%><br>
    <%= f.check_box :fccFlag %>
  </div>
  <div class="field">
    <%= f.label :is_qDrive %><br>
    <%= f.check_box :is_qDrive %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, :value => "N/A" %>
  </div>
  <div class="field">
    <%= f.label :format%><br>
    <%= f.text_field :format, :value => "N/A" %>
  </div>
  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :review, :style => 'width: 50%;' %>
  </div>
  <div class="actions" style="margin: 0 auto;">
    <%= f.submit :class => 'btn btn-success', :id => 'submit_button' %>
  </div>
<% end %>

