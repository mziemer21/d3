<div class="list-group-item playlist_singleton">
  <%# TODO REMOVE, PLAYLIST POPULATE, PLAYLIST TITLE, PLAYLIST FCC FLAG %>
  <div class="row">
    <div class="col-md-6">
      <h4><%= playlist.title %></h4>
      <p>Duration: [TIME]</p>
      <p>
        Clean?
        <% if playlist.contains_explicit? %>
          <span style="color:red">NO</span>
        <% else %>
          <span style="color:green">YES</span>
        <% end %>
      </p>
    </div>
    <div class="col-md-6">
      <% #<div class="btn btn-danger" style="float:right; font-family: Verdana, sans-serif;">Delete Playlist</div> %>
      <% #= link_to '<button type="button" class="btn btn-success" style="float:right; font-family:Verdana, sans-serif;">Add Songs</button>'.html.safe %> 
      <% #= button_to 'Edit Playlist', edit_playlist_path(playlist_id: playlist.id), method: :get, :class => 'btn btn-info' %> 
      <%= link_to '<button type="button" class="btn btn-danger" style="float:right; font-family:Verdana, sans-serif;">Delete Playlist</button>'.html_safe, playlists_path, {:controller => "playlists", :method => "destroy" } %>
    </div>
  </div>
  <table class="table table-striped table-border table-hover">
    <thead>
      <tr>
        <th><strong>Song</strong></th>
        <th><strong>Artist</strong></th>
        <th><strong>Album</strong></th>
        <th><strong>Inspect</strong></th>
        <th><strong>Remove</strong></th>
      </tr>
    </thead>
    <tbody>
    <% playlist.songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.artist %></td>
      <td><%= song.album %></td>
      <td>
        <%= link_to '<button type="button" class="btn btn-info">Info</button>'.html_safe, {:controller => "song_inspect", :action => "songInspect", :song => song.id } %>
      </td>
      <td>
        <!-- <%#= link_to '<button type="button" class="btn btn-info"Remove</button>'.html_safe, {:controller => 'remove_song'} %> -->
        <%#= link_to '<button type="button" class="btn btn-info">Remove</button>'.html_safe # {:controller => "playlists",:action => "remove_song"} %>
        <!--button type="button" class="btn btn-danger">Remove</button-->
        <%= button_to 'Remove', remove_song_from_playlist_path({ playlist_id: playlist.id, song_id: song.id }) , method: :delete, :class => 'btn btn-warning' %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
