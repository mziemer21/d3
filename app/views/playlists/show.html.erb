<p id="notice"><%= notice %></p>

<p>
  <strong>Users:</strong>
  <%= @playlist.user %>
  <% # EDITED FROM user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @playlist.title %>
</p>

<p>
  <strong>Songs:</strong>
  <ul>
  <% @playlist.songs.each do |song| %>
    <li><%= song.title %></li>
  <% end %>
  </ul>

</p>

<p>
  <strong>Qdrive:</strong>
  <%= @playlist.qDrive %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @playlist.notes %>
</p>

<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>






<div id="all_content"> 
  <div id="yield_wrapper">
    <%= render partial: 'layouts/header' %>
    <%= render partial: 'layouts/notify' %>

    <h1>Edit playlist</h1>

    <%= render 'form' %>
  
  	<%= link_to '<button type="button" class="btn btn-info">Edit</button>'.html_safe, edit_playlist_path(@playlist) %> |
    <%= link_to '<button type="button" class="btn btn-warning">Back</button>'.html_safe, playlists_path %>
  </div
</div>

<%= render partial: 'layouts/footer' %>

