<%= form_for(@playlist) do |f| %>
  <% if @playlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>

      <ul>
      <% @playlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :users %><br>
    <%= f.collection_select :user, User.all, :id, :name%>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :song_tokens, "Songs" %><br>
    <%= f.text_field :song_tokens, data: {load: @playlist.songs} %>
  </div>
  <div class="field">
    <%= f.label :qDrive %><br>
    <%= f.check_box :qDrive %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, :style => 'width: 50%;' %>
  </div>
  <div class="actions" style="margin: 0 auto;">
    <%= f.submit :class => 'btn btn-success', :id => 'submit_button' %>
  </div>
<% end %>

