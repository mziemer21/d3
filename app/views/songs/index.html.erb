<search>
  <div class="iframe">
  <div class="row">
      <div class="col-lg-10">
        <div class="input-group">
        <%= search_form_for @search, url: search_songs_path, :html => {:class => "form-inline"}, method: :post do |f| %>
          <%= f.condition_fields do |c| %>
            <%= render "condition_fields", f: c %>
          <% end %>
          <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
          <div class="actions"><%= f.submit "Search", :name => nil, :class => "btn btn-default" %></div>
        <% end %>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-10 -->
  </div><!-- /.row -->
  <!-- <body> -->
  <table class="table table-striped table-border table-hover">
      <thead>
        <tr>
        <th><strong><%= sortable "title" %></strong></th>
        <th><strong><%= sortable "artist" %></strong></th>
        <th><strong><%= sortable "album" %></strong></th>
        <th><strong>Inspect</strong></th>
        </tr>
      </thead>
    <tbody>
          <% @songs.each do |song| %>
         <tr>
            <td><%= song.title %></td>
            <td><%= song.artist %></td>
            <td><%= song.album %></td>
            <td>
              <%= link_to '<button type="button" class="btn btn-info">Info</button>'.html_safe, :controller => "song_inspect", :action => "songInspect", :song => song.id  %>

            </td>
         </tr>
        <% end %>
    </tbody>
  </table>
  <!-- </body> -->
  </div>
</search>
