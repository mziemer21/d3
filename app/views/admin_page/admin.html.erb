<%= render :partial => 'layouts/header' %>
<%#= render :partial => 'layouts/notify' %>

<script>
function adminLightbox(userID){    
  var url1 = "/adminInspect?userID=";
  
  var start = url1.concat(userID);

  console.log(start);
  $.colorbox({width:"80%", height:"80%", iframe:true, href:start});
}

function adminLightbox2(){    
  var url1 = "/addUser";

  console.log(url1);
  $.colorbox({width:"80%", height:"80%", iframe:true, href:url1});
}
</script>

<div id="all_content">
    <div id="yield_wrapper">

		<div class="iframe">
			<div class="row">
		  		<div class="col-lg-10">
		    		<div class="input-group">
		      			<span class="input-group-btn">
		      				<button class="btn btn-default" type ="button">Search</button>
		      			</span>
		      			<input type="text" class="form-control">			
		    		</div><!-- /input-group -->
		  		</div><!-- /.col-lg-10 -->
		  		<div class"col-lg-2">
		  			<button class="btn btn-success" type ="button" onClick="adminLightbox2()">Add New User</button>
		  		</div>
			</div><!-- /.row -->
			<!-- <body> -->
			<table class="table table-striped table-border table-hover">
		  		<thead>
		  			<tr>
		  			<th><strong>Username</strong></th>
		  			<th><strong>Email</strong></th>
		  			<th><strong>Inspect</strong></th>
		  			</tr>
		  		</thead>
				<tbody>
		        	<% @users.each do |user| %>
		     		 <tr>
		       			<td><%= user.name %></td>
		       			<td><%= user.email %></td>
		       			<td>
		       				<button class="btn btn-info" type ="button" onClick="adminLightbox(<%= user.id %>)">Info</button>
		       				
							<!-- #= :controller => "admin_inspect", :action => "adminInspect", :user => user.id, %> -->
		       			</td>
		     		 </tr>
		   			<% end %>
				</tbody>
			</table>
			<!-- </body> -->
		</div>

    </div>
</div>
