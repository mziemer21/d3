<p> <%#= @songs_list %> </p>
<% @songs_list.each do |entry| %>
<% end %>
<table class="table table-striped table-border table-hover">
	<thead>
  			<tr>
  			<th><strong>Number</strong></th>
  			<th><strong>Title</strong></th>
  			<th><strong>Length</strong></th>
  			<th><strong>Inspect</strong></th>
  			</tr>
  		</thead>
	<tbody>
	  <% @songs_list.each do |entry| %>
		  <tr>
		  	<td> 
		  		<% if entry["number"]  %>
		  			<%= entry["number"]%> 
		  		<% end %>
		  	</td>
		  	<td> 
		  		<% if entry['title'] %>
		  			<%= entry['title'] %> 
		  		<% end %>
		  	</td>
		  	<td> 
		  		<% $time_in_sec = entry['length']/1000 %> 
		  		<%= sprintf("%d:%02d", $time_in_sec/60, $time_in_sec % 60 ) %>
		  		<%# concat $time_in_sec/60 %>
		  		<%# concat $time_in_sec/60 %>
				<%# concat ":" %>
		  		<%# concat $time_in_sec%60 %>
			</td>
		  	
		  	<td>
		  		placeholder
		  		<%#= link_to '<button type="button" class="btn btn-info">Info</button>'.html_safe, :controller => "album_inspect", :action => "songInspect", :albumToQuery => entry['id']  %>
		  	<td>
		  </tr>
	  <% end %>
	</tbody>
</table>