<search>
  <div class="iframe">

<h2> Details for 
	<i> <%= @title %> </i>by
	<b> <%= @artist %> </b>
</h2>
<table class="table table-striped table-border table-hover" id="myTable">
	<thead>
  			<tr>
  			<th><strong>Country</strong></th>
  			<th><strong>Release Date</strong></th>
  			<th><strong>Qulity</strong></th>
  			<th><strong>Format</strong></th>
  			<th><strong>Track Count</strong></th>

  			<!-- <th><strong>Speciality</strong></th> -->

  			<th><strong>Inspect</strong></th>
  			</tr>
  		</thead>
	<tbody>
	  <% @rt.each do |entry| %>
		  <tr>
		  	<td> 
		  		<% if entry["release-events"]  %>
		  			<%= entry["release-events"].first['area']['name'] %> 
		  		<% end %>
		  	</td>
		  	<td> 
		  		<% if entry['date'] %>
		  			<%= entry['date'] %> 
		  		<% else %>
		  			<%= "N/A" %>
		  		<% end %>
		  	</td>
		  	<td> <%= entry['quality'] %> </td>
		  	<td> <%= entry['media'].first['format'] %> </td>
		  	<td> <%= entry['media'].first['track-count'] %> </td>
		  	<!-- <td> <%#= entry['disambiguation'] %> </td> -->
		  	<td>
		  		<%= link_to '<button type="button" class="btn btn-info">Info</button>'.html_safe, :controller => "album_inspect", :action => "songInspect", :albumToQuery => entry['id']  %>
		  	</td>
		  </tr>
	  <% end %>
	</tbody>
</table>
<script type="text/javascript">
    $(document).ready(function(){
        $('#myTable').dataTable({
          "sPaginationType": "bootstrap"
        });
    });
  </script>
    </div>
</search>
