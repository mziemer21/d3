<div class="iframe">
<!-- <div class="row"> -->
	<div style="text-align:center;">
		<h1><strong><%= @song['title'] %></strong></h1>
		<h4>example query 
			<a href = "http://musicbrainz.org/ws/2/recording/?query=back%20in%20black&fmt=json"> http://musicbrainz.org/ws/2/recording/?query=back%20in%20black&fmt=json </a>
		</h4>

	</div>
	<div class="col-md-6">
		<!-- <body> -->
			<table class="table table-striped table-bordered table-hover table-nonfluid">
				<thead>
				</thead>
				<tbody>
					<tr>
						<td><strong>Title</strong></td>
						<td><%= @song['title']  %></td>
					</tr>
					<tr>
						<td><strong>Artist</strong></td>
						<td>
							<% if @song['artist-credit']  %>
			  					<%= @song['artist-credit'].first['artist']['name'] %> 
			  				<% end %>
						</td>
					</tr>  			
					<tr>
						<td><strong>Album</strong></td>
						<td>
							<% if @song['releases'] %>
			  					<%= @song['releases'].first['title'] %> 
			  				<% else %>
			  					<%= "N/A" %>
			  				<% end %>
						</td>
					</tr>  			
					<tr>
						<td><strong>Duration</strong></td>
						<td>
							<% $time_in_sec = @song['length'].to_i/1000 %> 
		  					<%= sprintf("%d:%02d", $time_in_sec/60, $time_in_sec % 60 ) %>
						</td>
					</tr>  			
					<tr>
						<td><strong>Quality</strong></td>
						<td> N/A </td>
					</tr>  			
					<tr>
						<td><strong>FCC</strong></td>
						<td> N/A </td>
					</tr>  			
					<tr>
						<td><strong>Q-drive?</strong></td>
						<td> N/A </td>
					</tr>  			
					<tr>
						<td><strong>Location</strong></td>
						<td> N/A </td>
					</tr>  			
					<tr>
						<td><strong>Format</strong></td>
						<td> TODO: see views/album_inspect/singleSongInspect.html.erb </td>
					</tr>  			
					<tr>
						<td><strong>Review</strong></td>
						<td> TODO: see views/album_inspect/singleSongInspect.html.erb </td>
					</tr>  		
					<tr>
						<td><strong>ADD?</strong></td>
						<td> 
							<% $hash = {title: @song['title'], artist: @song['artist-credit'].first['artist']['name'], album: @song['releases'].first['title'], duration: Time.at($time_in_sec)} %>
							<%= link_to '<button type="button" class="btn btn-info">Add to Database</button>'.html_safe, :controller => "add_page", :action => "addSingleSong", :songEntry => $hash %>
						</td>
					</tr>  
				</tbody>
			</table>
		<!-- </body> -->
	</div>
	<div class="col-md-6">
		<div class="songI-nonfluid">
			<img src=  <%=  @art_link %> />
		</div>
	</div>
<!-- </div> -->
</div>
